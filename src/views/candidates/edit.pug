extends ../layout

block content
    h1 Editar Candidato
    if error
        h2= error
    form(action=`/candidates/${candidate.idCandidate}`, method="post")
        label(for="name") Nombre
        input(type="text", name="name", id="name", value=candidate.name)
        label(for="lastName") Apellido
        input(type="text", name="lastName", id="lastName", value=candidate.lastName)
        label(for="dni") DNI
        input(type="text", name="dni", id="dni", value=candidate.dni)
        label(for="yearOfBirth") AÃ±o de Nacimiento
        input(type="text", name="yearOfBirth", id="yearOfBirth", value=candidate.yearOfBirth)
        label(for="comments") Comentarios
        input(type="text", name="comments", id="comments", value=candidate.comments)
        label(for="validated") Validado
        input(type="text", name="validated", id="validated", value=candidate.validated)
        label(for="city") Ciudad
        input(type="text", name="city", id="city", value=candidate.city)
        label(for="idTypeOfHousing") ID Tipo de Vivienda
        input(type="number", name="idTypeOfHousing", id="idTypeOfHousing", value=candidate.idTypeOfHousing)
        input(type="submit", value="Guardar")
        button
            a(href='/candidates') Cancelar
