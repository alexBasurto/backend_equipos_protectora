extends ../layout

block content
    h1.editar-candidato Editar Candidato
    if error
        h2= error
    form.formulario(action=`/candidates/${candidate.idCandidate}`, method="post")
        .form-group
            label(for="name") Nombre
            input(type="text", name="name", id="name", value=candidate.name, class="input-field")
        .form-group
            label(for="lastName") Apellido
            input(type="text", name="lastName", id="lastName", value=candidate.lastName, class="input-field")
        .form-group
            label(for="dni") DNI
            input(type="text", name="dni", id="dni", value=candidate.dni, class="input-field")
        .form-group
            label(for="yearOfBirth") Año de Nacimiento
            input(type="text", name="yearOfBirth", id="yearOfBirth", value=candidate.yearOfBirth, class="input-field")
        .form-group
            label(for="comments") Comentarios
            input(type="text", name="comments", id="comments", value=candidate.comments, class="input-field")
        .form-group
            label(for="validated") Validado
                if candidate.validated
                    select(name="validated", id="validated", class="input-field")
                        option(value="si", selected=candidate.validated==="si") Sí
                        option(value="no", selected=candidate.validated==="no") No
        .form-group
            label(for="city") Ciudad
            input(type="text", name="city", id="city", value=candidate.city, class="input-field")
        .form-group
            label(for="idTypeOfHousing") Tipo de Vivienda
            select(name="idTypeOfHousing", id="idTypeOfHousing", class="input-field")
                each typeOfHousing in typesOfHousing
                    - if (typeOfHousing.idTypeOfHousing === candidate.idTypeOfHousing)
                        option(value=typeOfHousing.idTypeOfHousing, selected)= typeOfHousing.TypeOfHousing
                   
        .form-group
            input(type="submit", value="Guardar", class="btn-primary")
            button(class="btn-secondary")
                a(href='/candidates') Cancelar